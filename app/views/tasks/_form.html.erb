<%= form_with(model: task, local: true) do |form| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  
  <div class="add_task_list">
    <div class="field">
      <%= form.label :name, "名前" %>
      <%= form.text_field :name %>
    </div>

    <div class="field">
      <%= form.label :deadline, "期日" %>
      <%= form.datetime_select :deadline %>
    </div>

    <div class="field">
      <%= form.label :detail, "詳細" %>
      <%= form.text_area :detail %>
    </div>

    <div class="field">
      <%= form.label :time, "かかる時間" %>
      <%= form.number_field :time %>
    </div>

    <div class="field">
      <%= form.label :image, "画像" %>
      <%= form.file_field :image, id: :task_image %>
    </div>

    <div class="actions">
      <%= form.submit %>
    </div>
  </div>


<% end %>
